<div class="row" >
  <div class="small-12 columns" >
    <div class="small-6 medium-1 columns" >
    </div>
    <div class="small-6 medium-11 columns" >
    <h1><%= t('patients.index.title') %> </h1>

    <table>
      <thead>
        <tr>
          <th> <%= sort_link @search, :nickname %></th>
          <th> <%= sort_link @search, :firstname %></th>
          <th> <%= sort_link @search, :surname %></th>
          <th> <%= sort_link @search, :born_date %></th>
          <th colspan="3"><%= t('actions.column') %></th>
        </tr>
      </thead>

      <tbody>
        <% @patients.each do |patient| %>
          <tr>
            <td> <%= patient.nickname %> </td>
            <td> <%= patient.firstname %> </td>
            <td> <%= patient.surname %> </td>
            <td> <%= l patient.born_date %> </td>
            <td><%= link_to '  ', patient, class: "icon-search" %></td>
            <td><%= link_to '  ', edit_patient_path(patient), class: "icon-pencil" %></td>
            <td><%= link_to '  ', patient, method: :delete, data: { confirm: t('actions.destroy.confirmation') },  class: "icon-trash" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to t("actions.create", resource: 'Paciente'), new_patient_path %>
  </div>
</div>
