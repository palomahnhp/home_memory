<header>
  <div class="row">
    <div class="medium-12 columns">
      <% if current_user %>
        <div class="medium-12 columns">
          <div class="medium-2 columns">
            <%= image_tag('HumanMemory.png', class: 'logo-gif hide-for-small-only float-left', size: '324x185', alt: t('app.name')) %>
          </div>
          <div class="medium-10 columns">
              <h1 class="initial-page-title center-align" > <%= t('app.name') %> </h1>
          </div>
          <div class="medium-12 columns end ">
            <nav class="top-bar" data-topbar role="navigation">
              <ul class="title-area">
                <li class="name">
                  <h1> <%= link_to t('app.name'), root_path %> </h1>
                </li>
              </ul>
              <section class="top-bar-section">
                <ul class="left">
                  <li <%= "class=active" if controller_name == "users" %> >
                    <%= link_to t('activerecord.models.user', count: 2), users_path %>
                  </li>
                  <li class="has-dropdown" >
                    <a href="#">Datos maestros</a>
                    <ul class="dropdown">
                      <li <%= "class=active" if controller_name == "professionals" %>>
                        <%= link_to t('activerecord.models.profesional', count: 2), professionals_path %>
                      </li>
                      <li <%= "class=active" if controller_name == "medical_centers" %> >
                        <%= link_to t('activerecord.models.medical_center', count: 2), medical_centers_path %>
                      </li>
                      <li <%= "class=active" if controller_name == "medications" %>>
                        <%= link_to t('activerecord.models.medication', count: 2), medications_path %>
                      </li>
                      <li <%= "class=active" if controller_name == "specialities" %>>
                        <%= link_to t('activerecord.models.speciality', count: 2), specialities_path %>
                      </li>
                      <li <%= "class=active" if controller_name == "anaytical_groups" %>>
                        <%= link_to t('activerecord.models.analytical_group', count: 2), analytical_groups_path %>
                      </li>
                    </ul>
                  </li>

                  <li class="has-dropdown" >
                    <a href="#">Informes</a>
                    <ul class="dropdown">
                      <li><a href="#">Informe 1</a></li>
                      <li class="active"><a href="#">Informe 2</a></li>
                    </ul>
                  </li>
                </ul>
                <ul class="right">
                  <% if user_signed_in? %>
                    <li> <%= link_to t('header.help'), helps_path %> </li>
                  <% end %>
                  <%= render "devise/menu/login_items" %>
                </ul>
              </section>
            </nav>
            <br>
          </div>
        </div>
        <% else %>
          <div class="medium-4 columns">
            <%= image_tag('HumanMemory.png',
                          class: 'logo-gif hide-for-small-only float-left',
                          size: '220x185', alt: t('app.name')) %>
          </div>
          <div class="medium-8 columns">
            <h1 class="initial-page-title center-align" > <%= t('app.name') %> </h1>
          </div>
        <% end %>
    </div>
  </div>
</header>
