<div class="row" >
  <h1><%= t('medical_tests.index.title')%></h1>
</div>
<div class="row" >
  <div class="small-12 columns ">
    <p><%= page_entries_info @medical_tests %></p>
  </div>
  <div class="small-12 columns">
    <%= paginate @medical_tests %>
    <table>
      <thead>
        <tr>
          <th> <%= sort_link @search, :name %></th>
          <th> Fecha de prescripci√≥n  </th>
          <th> <%= sort_link @search, :performed_at %></th>
          <th> <%= sort_link @search, :patient %></th>
          <th> <%= sort_link @search, :professional %></th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @medical_tests.each do |medical_test| %>
          <tr>
            <td title="<%= medical_test.id %>"><%= medical_test.name %></td>
            <td><%= l medical_test.appointment&.appointment_time&.to_date if medical_test.appointment&.appointment_time.present? %></td>
            <td><%= l medical_test.performed_at %></td>
            <td><%= medical_test.patient.full_name %></td>
            <td><%= medical_test.professional.full_name %></td>

            <td><%= link_to '', analysis_results_path(medical_test: medical_test) , class: "icon-calendar", title: "Resultados" %></td>
            <td><%= link_to '', medical_test_path(medical_test, patient_id: @patient), class: "icon-search", title: "Detalle" %></td>
            <td><%= link_to '', edit_medical_test_path(medical_test, patient_id: @patient), class: "icon-pencil", title: "Editar" %></td>
            <td><%= link_to '', medical_test_path(medical_test, patient_id: @patient), method: :delete, data: { confirm: 'Are you sure?' }, class: "icon-trash", title: "Eliminar" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
<div class="row">
  <div class="small-12 columns">
    <div class="medium-4 small-12 columns">
      <%= link_to t('medical_test.new'), new_medical_test_path(patient_id: @patient) %>
    </div>
    <div class="medium-8 small-12 columns">
      <%= render 'import_analysis' %>
    </div>
  </div>
</div>

