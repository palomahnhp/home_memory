<div class="row nested-fields">
  <table>

    <tr>
      <td class="short-col"><%= f.select :level, options_for_select([ "B", "A" ], f.object.level), include_blank: true %></td>
      <td class="short-col"><%= f.select :grade, options_for_select(['+', '-'], f.object.grade), include_blank: true %></td>
      <td><%= f.select :analytical_item_id,
                       options_from_collection_for_select(AnalyticalItem.all,
                                                          'id',  'name',
                                                          f.object.analytical_item_id),
                       {:include_blank => 'Selecciona la prueba'}  %></td>
      <td><%= f.number_field :amount, min: 0, step: 0.01 %></td>
      <td>
       <%= f.text_field :unit  %>
      </td>
      <td><%= f.text_area :interpretation %></td>
      <td><%= link_to_remove_association "[-]", f %></td>
    </tr>
  </table>

</div>
