<%= form_with(model: user, local: true) do |form| %>
  <fieldset>
    <legend>
      <%= t('users.block.personal_data') %>
    </legend>
    <div class="row">
      <div class="fieldset small-12 columns">
        <div  class="medium-4 small-12 columns">
          <%= form.label :first_name %>
          <%= form.text_field :first_name %>
        </div>
        <div  class="medium-8 small-12 columns">
          <%= form.label :last_name %>
          <%= form.text_field :last_name %>
        </div>
      </div>
      <div  class="medium-12 small-12 columns">
        <div  class="medium-3 small-12 columns">
          <%= form.label :document %>
          <%= form.text_field :document %>
        </div>
        <div  class="medium-3 small-12 columns end">
          <%= form.label :born_date %>
          <%= form.date_field :born_date %>
        </div>
      </div>
    </div>
  </fieldset>

  <div class="row">
    <div class="small-12 columns">
      <fieldset>
        <legend><%= t('users.fields') %> </legend>
        <div class="small-12 columns">
          <%= link_to_add_association '[+] aÃ±adir campo', form, :properties %>
        </div>
        <div class="small-12 columns">
          <%= form.fields_for :properties do |f| %>
            <div class="small-12 medium-3 columns">
              <%= f.label  :fieldset %>
              <%= f.text_field :fieldset %>
            </div>
            <div class="small-12 medium-4 columns">
              <%= f.label      :name %>
              <%= f.text_field :name %>
            </div>
            <div class="small-12 medium-4 columns">
              <%= f.label      :value %>
              <%= f.text_field :value %>
            </div>
            <div class="small-12 medium-1 columns">
              <%= f.label      :order %>
              <%= f.text_field :order %>
            </div>
          <% end %>
        </div>
      </fieldset>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <div class="row">
        <div class="documents small-12">
          <%= render 'documents/nested_documents', documentable: @user, f: form %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit t('actions.save'), class: "button hollow" %>
  </div>
<% end %>