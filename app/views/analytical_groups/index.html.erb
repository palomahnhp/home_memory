<div class="row" >
  <div class="small-12 columns">
    <h1>Grupos de Determinaciones Anal√≠ticas#index</h1>
  </div>
</div>

<div class="row" >
  <div class="small-12 columns">
    <table>
      <tr>
        <th> Nombre</th>
        <th> Activo</th>
        <th colspan="3"> Acciones</th>
      </tr>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %> </td>
          <td><%= t("boolean.#{group.inactive.blank?}") %></td>
          <td> <%= link_to '', analytical_items_path(group: group), class: "icon-search", title: 'Items'  %></td>
          <td> <%= link_to '', edit_analytical_group_path(group), class: "icon-pencil", title: 'Editar'  %></td>
          <td> <%= link_to '', analytical_group_path(group), method: :delete, class: "icon-trash", confirm: "Are you sure?", title: "Eliminar"  %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <div class="medium-4 small-12 columns">
      <%= link_to t('analytical_group.new'), new_analytical_group_path(patient_id: @patient) %>
    </div>
    <div class="medium-8 small-12 columns">
      <%= render 'import' %>
    </div>
  </div>
</div>
