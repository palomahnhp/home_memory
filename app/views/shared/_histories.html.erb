<h4>Historial</h4>

<%= render "histories/search_form" %>
<br>

<%= link_to " " + t('actions.create', resource: 'cita'), new_history_path(user_id: user, kind: 'appointment'), class: "icon-calendar" %> |
<%= link_to " " + t('actions.create', resource: 'nota'), new_history_path(user_id: user, kind: 'annotation' ),class: "icon-pencil" %>  |
<%= link_to " " + 'Todas las pruebas', medical_tests_path(user_id: @user), class: "icon-drug-medecine-streamline-syringue", title: "Pruebas" %> |
<%= link_to " " + 'Exportar', histories_path(user_id: @user, format: 'xls'), class: "icon-download", title: "Exportar historias" %>

<% @histories.no_pending.each do |history| %>
  <%= render "shared/history", history: history%>
<% end %>

<% if histories(user).empty? %>
  <div class="panel">
    No hay datos
  </div>
<% end %>
