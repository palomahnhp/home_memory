<div class="row" >
  <div class="small-12 columns">
    <div class="small-4 columns end">
      <h4>Pr√≥ximas citas</h4>
    </div>
  </div>

  <div class="row" >
    <div class="small-2 columns end">
      <%= link_to t('actions.create', resource: 'cita'), new_history_path(patient_id: @patient, kind: 'cita' ) %>
    </div>
    <% appointments(patient).send(type).each do |appointment| %>
      <div class="small-12 columns">
        <div class="panel">
          <p>
            <strong><%= appointment.professional.speciality.name %> - Dr/a <%= appointment.professional.full_name %></strong>
            <strong> <%= l appointment.event_at %> </strong>
            <br>
            <%= appointment.professional.medical_center.name %> ,
            <%= appointment.location %>
          </p>
          <p>
            <strong>Motivo</strong>
            <%= appointment.reason %>
          </p>
          <p>
            <%= link_to t('actions.delete', resource: 'cita'),
                        history_path(appointment, patient_id: @patient),
                        method: :delete, confirm: t('actions.destroy.confirmation')
            %>
          </p>

        </div>
      </div>

      <% if appointments(patient).send(type).empty? %>
        <div class="small-12 columns">
          <div class="panel" >
            No hay citas pendientes
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>