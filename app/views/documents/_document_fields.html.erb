<div id="<%= dom_id(f.object) %>" class="document direct-upload document-fields nested-fields">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :cached_attachment %>

  <fieldeset>
    <legend title="Eliminar documento"> <%= render_destroy_document_link(f, f.object) %> Documento => <%= document_attachment_file_name(f.object) %> </legend>
    <div class="small-12 column title">
      <div class="small-6 column">
        <%= f.text_field :title, placeholder: t("documents.form.title_placeholder") %>
      </div>
      <div class="small-6 column action-add attachment-errors document-attachment">
        <%= render_attachment(f, f.object) %>
      </div>
    </div>

    <div class="small-12 column attachment-actions">
    </div>
  </fieldeset>

  <div class="small-12 column">
    <div class="progress-bar-placeholder"><div class="loading-bar"></div></div>
  </div>
  <hr>

</div>