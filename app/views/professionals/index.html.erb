<div class="row" >
  <div class="small-12 columns" >
    <div class="small-6 medium-11 columns" >
      <h1><%= t('professionals.index.title') %> </h1>

      <table>
        <thead>
          <tr>
            <th> <%= sort_link @search, :first_name %></th>
            <th> <%= sort_link @search, :last_name %></th>
            <th> <%= sort_link @search, :speciality %></th>
            <th> <%= sort_link @search, :medical_center %></th>
            <th colspan="3"><%= t('actions.column') %></th>
          </tr>
        </thead>

        <tbody>
          <% @professionals.each do |professional| %>
            <tr>
              <td> <%= professional.first_name %> </td>
              <td> <%= professional.last_name %> </td>
              <td> <%= professional.speciality.name %> </td>
              <td> <%= professional.medical_center.name %> </td>
              <td><%= link_to '  ', professional, class: "icon-search" %></td>
              <td><%= link_to '  ', edit_professional_path(professional), class: "icon-pencil" %></td>
              <td><%= link_to '  ', professional, method: :delete, data: { confirm: t('actions.destroy.confirmation') },  class: "icon-trash" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <%= link_to t("actions.create", resource: 'Profesional'), new_professional_path %>
    </div>
  </div>
</div>