<%= link_to t("actions.create", resource: 'Cita'), new_appointment_path(patient_id: @patient) %>
<% @patient.appointments.each do |appointment| %>
  <div class="panel">
    <p>
      <strong><%= appointment.professional.speciality.denomination %> - Dr/a <%= appointment.professional.full_name %></strong>
      <strong> <%= l appointment.appointment_time.to_time %> </strong>
      <br>
      <%= appointment.professional.medical_center.name %> ,
      <%= appointment.location %>
    </p>
    <p>
      <strong>Motivo</strong>
      <<%= appointment.reason %>
    </p>
  </div>
<% end %>

<% if @patient.appointments.empty? %>
   <div class="panel" >
     No hay citas pendientes
    </div>

<% end %>