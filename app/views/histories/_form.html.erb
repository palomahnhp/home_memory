<div class="row">
  <%= form_with(model: @history, local: true) do |form| %>

    <div class="small-12 columns" >
      <% if form.object.kind.present?  %>
        <h3><%= form.object.kind.capitalize %></h3>
      <% else %>
        <div class="small-6 columns" >
          <%= form.label :kind %>
          <%= form.select :kind,
              options_for_select(History::KIND, form.object.kind),
                          {:include_blank => 'Selecciona nota o cita'} %>
        </div>
      <% end %>
    </div>

    <div class="small-12 columns" >
      <% if form.object.kind = 'cita' %>
        <%= render 'appointment', form: form %>
      <% else %>
        <%= render 'annotation', form: form %>
      <% end %>
    </div>

    <div class="small-12 columns">
      <%= form.label :reason %>
      <%= form.text_area :reason %>
    </div>

    <div class="small-12 columns" >
      <div class="small-6 columns" >
        <%= form.label :note %>
        <%= form.text_area :note %>
      </div>
    </div>
    <div class="row">
      <div class="small-3 columns">
        <strong> <%= t('activerecord.models.prescription.other') %> </strong>
      </div>
      <div class="small-2 columns">
        <%= link_to_add_association 'AÃ±adir receta', form, :prescriptions %>
      </div>

      <div class="small-12 columns">
        <%= form.fields_for :prescriptions do |prescription| %>
          <%= render 'prescription_fields', f: prescription %>
        <% end %>
      </div>
    </div>
    <div class="actions">
      <%= form.submit t('actions.save'), class: "button, hollow" %>
    </div>
  <% end %>
</div>